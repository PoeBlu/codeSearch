div(class='col-md-3')
div(class='col-xs-12 col-sm-9 col-md-6')
  if result._source.syntax
    div(class='row')
      div(class='col-xs-12')
        h2 Syntax
        pre
          code(class='javascript')!= result._source.syntax
  if result._source.params
    div(class='row')
      div(class='col-xs-12')
        h2 Parameters
        each val in result._source.params
          ul(class='list-unstyled')
            li!= "<span class='param'>"+ val.name + "</span>" + " " + "<em>"+val.type+"</em>" + " : " + val.description
  if result._source.example
    div(class='row')
      div(class='col-xs-12')
        h2 Example
        pre!= result._source.example
  if result._source.description
    div(class='row')
      div(class='col-xs-12')
        h2 Description
        p(class='result-description')!= result._source.description
div(class='col-xs-12 col-sm-3 col-md-3 rating-block')
  a(href='#', class='positive', id=result._id)
    span(class='glyphicon glyphicon-ok')
    p(class='positive-text') Correct :) Accept result
  a(href='#', class='negative')
    span(class='glyphicon glyphicon-remove')
    p(class='negative-text') Wrong :( Show next result