div(class='col-md-3')
div(class='col-xs-12 col-sm-9 col-md-6')
  if result._source.syntax
    div(class='row')
      div(class='col-xs-12')
        pre
          code(class='javascript')!= result._source.syntax
  if result._source.params
    div(class='row')
      div(class='col-xs-12')
        each val in result._source.params
          ul
            li= val.name + ": " + val.description
  if result._source.example
    div(class='row')
      div(class='col-xs-12')
        pre!= result._source.example
  if result._source.description
    div(class='row')
      div(class='col-xs-12')
        p= result._source.description
div(class='col-xs-12 col-sm-3 col-md-3')
  a(href='#', class='positive', id=result._id) Positive
  a(href='#', class='negative') Negative